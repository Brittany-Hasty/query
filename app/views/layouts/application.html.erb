<!DOCTYPE html>
<html>
  <head>
    <title>Query</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>

    <% if current_user %>
    <script>
      window.currentUser = {
        "id": <%= current_user.id %>,
        "fname": "<%= current_user.fname %>",
        "lname": "<%= current_user.lname %>",
        "email": "<%= current_user.email %>",
        "credentials": "<%= current_user.credentials %>",
      };
    </script>
    <% end %>
    
  </head>

  <body>
    <%= yield %>
  </body>
</html>
